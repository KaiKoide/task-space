generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Group {
  id        String   @id(map: "group_pkey") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  name      String   @db.VarChar
  Task      Task[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Status {
  id     String @id(map: "status_pkey") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  status String @db.VarChar
  Task   Task[]
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Task {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  title       String
  description String?
  groupId     String   @db.Uuid
  createdBy   String   @db.Uuid
  statusId    String   @db.Uuid
  dueDate     DateTime @db.Timestamptz(6)
  User        User     @relation(fields: [createdBy], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Group       Group    @relation(fields: [groupId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  Status      Status   @relation(fields: [statusId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model User {
  id        String   @id(map: "user_pkey") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  name      String   @db.VarChar
  email     String   @db.VarChar
  password  String   @db.VarChar
  Task      Task[]
}
